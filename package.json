{
  "name": "archjs",
  "version": "0.1.0",
  "description": "Full-stack Node.js Framework",
  "keywords": [
    "nodejs",
    "uwebsockets",
    "svelte",
    "every-layout",
    "rollup",
    "full-stack",
    "framework",
    "rpc",
    "json-rpc"
  ],
  "author": "Artem Tolstykh aka Mr. Arch",
  "license": "MIT",
  "main": "dist/server.js",
  "scripts": {
    "develop": "sh etc/scripts/develop.sh",
    "start": "sh etc/scripts/start.sh",
    "clinic": "sh etc/scripts/clinic.sh",
    "perform": "sh etc/scripts/perform.sh profile/arch",
    "test": "standard && jest --watchAll",
    "storybook": "start-storybook -p 6006 -s static",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "abstract-logging": "*",
    "ajv": "*",
    "page": "*",
    "pino": "*",
    "uWebSockets.js": "github:uNetworking/uWebSockets.js#v18.9.0"
  },
  "devDependencies": {
    "@babel/core": "*",
    "@babel/plugin-syntax-dynamic-import": "*",
    "@babel/plugin-transform-runtime": "*",
    "@babel/preset-env": "*",
    "@babel/runtime": "*",
    "@rollup/plugin-babel": "*",
    "@rollup/plugin-commonjs": "*",
    "@rollup/plugin-node-resolve": "*",
    "@rollup/plugin-replace": "*",
    "@storybook/addon-actions": "*",
    "@storybook/addon-essentials": "*",
    "@storybook/addon-links": "*",
    "@storybook/addon-storyshots": "*",
    "@storybook/svelte": "*",
    "@testing-library/jest-dom": "*",
    "@testing-library/svelte": "*",
    "babel-loader": "*",
    "jest": "*",
    "jest-transform-svelte": "*",
    "nodemon": "*",
    "prettier": "*",
    "react-is": "*",
    "rollup": "*",
    "rollup-plugin-livereload": "*",
    "rollup-plugin-svelte": "*",
    "rollup-plugin-terser": "*",
    "standard": "*",
    "svelte": "*",
    "svelte-loader": "*"
  },
  "standard": {
    "ignore": [
      "dist",
      "static"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest",
      "^.+\\.svelte$": "jest-transform-svelte"
    },
    "moduleFileExtensions": [
      "js",
      "svelte",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|stylesheet)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "setupFilesAfterEnv": [
      "@testing-library/jest-dom/extend-expect"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/build/",
      "/storybook-static/"
    ]
  },
  "engines": {
    "node": ">=14"
  },
  "private": true
}
